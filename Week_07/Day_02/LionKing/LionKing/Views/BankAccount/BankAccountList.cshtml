@model LionKing.Models.BankAccountList

<html xmlns="http://www.w3.org/1999/xhtml">
<head> 
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />
    <title>BankAccount List</title>
</head>
<body>
    This is the list of the BankAccounts:
    <h1>ID | Name | Balance | Currency | Animaltype | Status</h1>
    @for(int i=0; i<Model.bankAccountList.Count(); i++)
    { 
        <p>@(i+1) | @Model.bankAccountList[i].Name | @Model.bankAccountList[i].Balance |
        @Model.bankAccountList[i].Currency | @Model.bankAccountList[i].Animaltype | 
        @if (Model.bankAccountList[i].IsKingOrNot)
        {
            @:<span id="king">King</span>
        }
        else
        {
            @:dependant;
        }
        </p>
    }
</body>
</html>